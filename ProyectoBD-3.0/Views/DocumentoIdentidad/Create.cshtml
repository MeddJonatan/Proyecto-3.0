@model Proyecto.Model.Clases.DocumentoIdentidad
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="container mt-5 d-flex justify-content-center">
        <div class="card shadow-sm bg-light">
            <div class="card-header">
                <h4>Crear Documento Identidad</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <th>Codigo Documento Identidad</th>
                        @Html.EditorFor(model => model.Codigo_DocumentoIdentidad, new { htmlAttributes = new { @class = "form-control", @maxlength = "80", @style = "max-width:100%;" } })
                        @Html.ValidationMessageFor(model => model.Codigo_DocumentoIdentidad, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        <th>Fecha de Emisión</th>
                        @Html.EditorFor(model => model.FechaEmision_DocumentoIdentidad, new { htmlAttributes = new { @class = "form-control", @maxlength = "80", @style = "max-width:100%;" } })
                        @Html.ValidationMessageFor(model => model.FechaEmision_DocumentoIdentidad, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        <th>Fecha de Finalización</th>
                        @Html.EditorFor(model => model.FechaFinalizacion_DocumentoIdentidad, new { htmlAttributes = new { @class = "form-control", @maxlength = "80", @style = "max-width:100%;" } })
                        @Html.ValidationMessageFor(model => model.FechaFinalizacion_DocumentoIdentidad, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        <th>Tipo de Documento Identidad</th>
                        @Html.DropDownList("ID_TipoDocumentoIdentidad", null, htmlAttributes: new { @class = "form-control", @maxlength = "80", @style = "max-width:100%;" })
                        @Html.ValidationMessageFor(model => model.ID_TipoDocumentoIdentidad, "", new { @class = "text-danger" })
                    </div>
                    <div class="card-footer text-md-center mt-3">
                        <button type="submit" class="btn btn-primary btn-lg">Guardar cambios</button>
                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger btn-lg ml-3" })
                    </div>
                }
            </div>
        </div>
    </div>
</body>