@model IEnumerable<Proyecto.Model.Clases.Paises>

@{
    ViewBag.Title = "Listado de Paises";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="UTF-8">
    <title>Listado de Paises</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet">
</head>

<body>
    <hr />
    <div class="container-fluid mt-4" style="padding-left: 5%; padding-right: 5%;">
        <h2>Listado de Paises</h2>
    <hr />
        <p>
            @Html.ActionLink("Crear Nuevo País", "Create", null, new { @class = "btn btn-primary" })
        </p>

        <table id="countriesTable" class="table table-striped" style="margin-top: 2%;">
            <thead>
                <tr>
                    <th style="width: 10%">Código</th>
                    <th style="width: 40%">Nombre</th>
                    <th style="width: 20%">Nacionalidad</th>
                    <th style="width: 10%">Sufijo</th>
                    <th style="width: 20%; text-align: center;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pais in Model)
                {
                    <tr>
                        <td>@pais.Codigo_Pais</td>
                        <td>@pais.Nombre_Pais</td>
                        <td>@pais.Nacionalidad</td>
                        <td>@pais.Sufijo_Pais</td>
                        <td align="center">
                            @Html.ActionLink("Editar", "Edit", new { id = pais.ID_Pais }, new { @class = "btn btn-warning btn-sm" })
                            @Html.ActionLink("Detalles", "Details", new { id = pais.ID_Pais }, new { @class = "btn btn-info btn-sm" })

                            <a href="#" class="btn btn-danger btn-sm" onclick="openModal(event); return false;">Eliminar</a>

                            <div id="deleteModal" class="modal">
                                <div class="modal-content">
                                    <span class="close" onclick="closeModal()">&times;</span>
                                    <p>¿Estás seguro de que quieres eliminar este país?</p>
                                    @Html.ActionLink("Confirmar Eliminación", "Delete", new { id = pais.ID_Pais }, new { @class = "btn btn-danger btn-sm" })
                                </div>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>

    @* <script src="~/Scripts/ScriptCreados/Paises/Index.js"></script> *@
</body>
