@model Proyecto.Model.Clases.Paises

@{
    ViewBag.Title = "Editar País";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm bg-light"  style="width:70%">
        <div class="card-header">
            <h4>Editar País</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ID_Pais)

                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th scope="row">@Html.LabelFor(model => model.Codigo_Pais)</th>
                            <td>
                                @Html.EditorFor(model => model.Codigo_Pais, new { htmlAttributes = new { @class = "form-control", placeholder = "Código del país" } })
                                @Html.ValidationMessageFor(model => model.Codigo_Pais, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">@Html.LabelFor(model => model.Nombre_Pais)</th>
                            <td>
                                @Html.EditorFor(model => model.Nombre_Pais, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombre del país" } })
                                @Html.ValidationMessageFor(model => model.Nombre_Pais, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">@Html.LabelFor(model => model.Nacionalidad)</th>
                            <td>
                                @Html.EditorFor(model => model.Nacionalidad, new { htmlAttributes = new { @class = "form-control", placeholder = "Nacionalidad" } })
                                @Html.ValidationMessageFor(model => model.Nacionalidad, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">@Html.LabelFor(model => model.Sufijo_Pais)</th>
                            <td>
                                @Html.EditorFor(model => model.Sufijo_Pais, new { htmlAttributes = new { @class = "form-control", placeholder = "Sufijo del país" } })
                                @Html.ValidationMessageFor(model => model.Sufijo_Pais, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="text-right mt-3">
                    <button type="submit" class="btn btn-primary">Guardar cambios</button>
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ml-2" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}