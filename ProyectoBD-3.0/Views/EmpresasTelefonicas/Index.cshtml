@model IEnumerable<Proyecto.Model.Clases.EmpresasTelefonicas>

@{
    ViewBag.Title = "Listado de Empresas Telefónicas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="UTF-8">
    <title>Listado de Empresas Telefónicas</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet">
</head>

<body>
    <div class="container-fluid mt-4" style="padding-left: 5%; padding-right: 5%;">
        <h2>Listado de Empresas Telefónicas</h2>
        <hr />
        <p>
            @Html.ActionLink("Crear Nueva Empresa", "Create", null, new { @class = "btn btn-primary" })
        </p>
        <hr />
        <table id="companiesTable" class="table table-striped" style="margin-top: 2%;">
            <thead>
                <tr>
                    <th style="width: 80%">Nombre de la Empresa</th>
                    <th style="width: 20%; text-align: center;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var empresa in Model)
                {
                    <tr>
                        <td>@empresa.Nombre_EmpresaTelefonica</td>
                        <td align="center">
                            @Html.ActionLink("Editar", "Edit", new { id = empresa.ID_EmpresaTelefonica }, new { @class = "btn btn-warning btn-sm" })
                            @Html.ActionLink("Detalles", "Details", new { id = empresa.ID_EmpresaTelefonica }, new { @class = "btn btn-info btn-sm" })
                            <a href="#" class="btn btn-danger btn-sm" onclick="openModal(event); return false;">Eliminar</a>

                            <div id="deleteModal" class="modal">
                                <div class="modal-content">
                                    <span class="close" onclick="closeModal()">&times;</span>
                                    <p>¿Estás seguro de que quieres eliminar esta empresa?</p>
                                    @Html.ActionLink("Confirmar Eliminación", "Delete", new { id = empresa.ID_EmpresaTelefonica }, new { @class = "btn btn-danger btn-sm" })
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#companiesTable').DataTable();
        });

        function openModal(event) {
            event.preventDefault();
            var modal = document.getElementById("deleteModal");
            modal.style.display = "block";
        }

        function closeModal() {
            var modal = document.getElementById("deleteModal");
            modal.style.display = "none";
        }
    </script>
</body>
</html>
