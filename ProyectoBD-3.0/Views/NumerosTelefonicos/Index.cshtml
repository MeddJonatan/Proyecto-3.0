@model IEnumerable<Proyecto.Model.Clases.NumerosTelefonicos>
@{
    ViewBag.Title = "Listado de Números Telefónicos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="container-fluid mt-4" style="padding-left:5%; padding-right:5%">
        <hr />
        <h2 class="mb-4">Listado de Números Telefónicos</h2>
        <hr />
        <hr />
        <p>
            @Html.ActionLink("Nuevo Número Telefónico", "Create", null, new { @class = "btn btn-primary btn-lg" })
        </p>
        <hr />
        <hr />
        <table id="TelefonosTable" class="table table-striped table-bordered" role="table">
            <thead>
                <tr>
                    <th style="width: 40%; text-align:center;" scope="col">Número de Teléfono</th>
                    <th style="width: 40%; text-align:center;" scope="col">Empresa Telefónica</th>
                    <th style="width: 20%; text-align:center;" scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align:center;">
                            @Html.DisplayFor(modelItem => item.NumeroTelefono)
                        </td>
                        <td style="text-align:center;">
                            @Html.DisplayFor(modelItem => item.EmpresasTelefonicas.Nombre_EmpresaTelefonica)
                        </td>
                        <td style="text-align:center;">
                            @Html.ActionLink("Editar", "Edit", new { id = item.ID_NumTelefono }, new { @class = "btn btn-warning btn-sm", @title = "Editar" })
                            @Html.ActionLink("Detalles", "Details", new { id = item.ID_NumTelefono }, new { @class = "btn btn-success btn-sm", @title = "Detalles" })
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_NumTelefono }, new { @class = "btn btn-danger btn-sm", @title = "Eliminar" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @section Scripts {
            <script src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js"></script>
            <script>
                $(document).ready(function () {
                    $('#TelefonosTable').DataTable({
                        "language": {
                            "url": "//cdn.datatables.net/plug-ins/1.11.4/i18n/es_es.json"
                        }
                    });
                });
            </script>
        }
    </div>
</body>
