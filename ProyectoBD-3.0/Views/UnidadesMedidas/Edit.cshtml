@model Proyecto.Model.Clases.UnidadesMedidas

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm bg-light">
        <div class="card-header">
            <h4>Editar Unidad de Medida</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ID_UnidadMedida)

                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th scope="row">Abreviatura de la Unidad de Medida: </th>
                            <td>
                                @Html.EditorFor(model => model.Abreviatura_UnidadMedida, new { htmlAttributes = new { @class = "form-control", placeholder = "Abreviatura de la unidad de medida" } })
                                @Html.ValidationMessageFor(model => model.Abreviatura_UnidadMedida, "", new { @class = "text-danger" })
                            </td>
                        </tr>

                        <tr>
                            <th scope="row">Descripción de la Unidad de Medida: </th>
                            <td>
                                @Html.EditorFor(model => model.Descripcion_UnidadMedida, new { htmlAttributes = new { @class = "form-control", placeholder = "Descripción de la unidad de medida" } })
                                @Html.ValidationMessageFor(model => model.Descripcion_UnidadMedida, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="card-footer text-md-center">
                    <button type="submit" class="btn btn-primary">Guardar cambios</button>
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ml-2" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
