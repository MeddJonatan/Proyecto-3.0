@model Proyecto.Model.Clases.Generos
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="container mt-5 d-flex justify-content-center">
        <div class="card shadow-sm bg-light">
            <div class="card-header">
                <h4>Crear Género</h4>
            </div>
            <div class="card-body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                <div class="mb-3">
                    @Html.LabelFor(model => model.Descripcion_Genero, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Descripcion_Genero, new { htmlAttributes = new { @class = "form-control", @maxlength = "80", @style = "max-width:100%;" } })
                    @Html.ValidationMessageFor(model => model.Descripcion_Genero, "", new { @class = "text-danger" })
                </div>
                    <div class="card-footer text-md-center mt-3">
                        <button type="submit" class="btn btn-primary btn-lg">Guardar cambios</button>
                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger btn-lg ml-3" })
                    </div>
                }
            </div>
        </div>
    </div>
</body>