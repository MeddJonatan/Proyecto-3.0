@model Proyecto.Model.Clases.Generos
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm bg-light" style="width:70%">
        <div class="card-header">
            <h4>Generos</h4>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th style="width: 30%" scope="row">Género: </th>
                        <td>
                            @Html.DisplayFor(model => model.Descripcion_Genero)
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="card-footer text-md-center mt-3">
                @Html.ActionLink("Editar", "Edit", new { id = Model.ID_Genero }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Eliminar", "Delete", new { id = Model.ID_Genero }, new { @class = "btn btn-danger" })
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ml-2" })
            </div>
        </div>
    </div>
</div>