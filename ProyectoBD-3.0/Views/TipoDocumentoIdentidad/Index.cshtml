@model IEnumerable<Proyecto.Model.Clases.TipoDocumentoIdentidad>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="container-fluid mt-4" style="padding-left:5%; padding-right:5%">
        <hr />
        <h2>Listado de Tipos de Documentos de Identidad</h2>
        <hr />
        <hr />
        <p>
        <p>
            @Html.ActionLink("Nuevo Tipo De Documento de Identidad", "Create", null, new { @class = "btn btn-primary  btn-lg ml-3" })
        </p>
        <hr />
        <hr />
        <table id="tipodocTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th style="width: 20%; text-align:center; align-content: center">Codigo del Tipo de Documento</th>
                    <th style="width: 30%; text-align:center; align-content: center">Descripción del Tipo de Documento de Identidad</th>
                    <th style="width: 30%; text-align:center; align-content: center">Codigo del Pais</th>
                    <th style="width: 20%; text-align:center; align-content: center" >Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Codigo_TipoDocumento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion_TipoDocumentoIdentidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Paises.Codigo_Pais)
                        </td>

                        <td align="center">
                            @Html.ActionLink("Editar", "Edit", new { id = item.ID_TipoDocumentoIdentidad }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Detalles", "Details", new { id = item.ID_TipoDocumentoIdentidad }, new { @class = "btn btn-success" })
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_TipoDocumentoIdentidad }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @section Scripts {
            <script src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js   "></script>
            <script>
                $(document).ready(function () {
                    $('#tipodocTable').DataTable();
                });
            </script>
        }
    </div>
</body>