@model Proyecto.Model.Clases.MarcasProductos

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm bg-light">
        <div class="card-header">
            <h4>Editar Marca de Producto</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ID_MarcaProducto)

                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th scope="row">Codigo de la Marca del Producto: </th>
                            <td>
                                @Html.EditorFor(model => model.Codigo_MarcaProducto, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Codigo_MarcaProducto, "", new { @class = "text-danger" })
                            </td>
                        </tr>

                        <tr>
                            <th scope="row">Nombre de la Marca del Producto: </th>
                            <td>
                                @Html.EditorFor(model => model.Nombre_MarcaProducto, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nombre_MarcaProducto, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="card-footer text-md-center">
                    <button type="submit" class="btn btn-primary">Guardar cambios</button>
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ml-2" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
