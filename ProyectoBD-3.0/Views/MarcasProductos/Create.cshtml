@model Proyecto.Model.Clases.MarcasProductos
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4>Crear Marca de Producto</h4>
                    </div>
                    <div class="card-body form-container">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="mb-3">
                                @Html.LabelFor(model => model.Codigo_MarcaProducto, htmlAttributes: new { @class = "control-label " })
                                @Html.EditorFor(model => model.Codigo_MarcaProducto, new { htmlAttributes = new { @class = "form-control", @maxlength = "80", @style = "max-width:100%;" } })
                                @Html.ValidationMessageFor(model => model.Codigo_MarcaProducto, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                @Html.LabelFor(model => model.Nombre_MarcaProducto, htmlAttributes: new { @class = "control-label " })
                                @Html.EditorFor(model => model.Nombre_MarcaProducto, new { htmlAttributes = new { @class = "form-control", @maxlength = "80", @style = "max-width:100%;" } })
                                @Html.ValidationMessageFor(model => model.Nombre_MarcaProducto, "", new { @class = "text-danger" })
                            </div>
                            <div class="card-footer text-md-center mt-3">
                                <button type="submit" class="btn btn-primary btn-lg">Guardar cambios</button>
                                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger btn-lg ml-3" })
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>