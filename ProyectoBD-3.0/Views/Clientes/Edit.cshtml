@model Proyecto.Model.Clases.Clientes
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm bg-light" style="width:70%">
        <div class="card-header justify-content-center">
            <h4> Editar Cliente</h4>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.HiddenFor(model => model.ID_Cliente)

                    <div class="form-group">
                        @Html.LabelFor(model => model.ID_DatoUsuario, "Seleccionar Usuario", htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.DropDownList("ID_DatoUsuario", (SelectList)ViewBag.DatosUsuarios, new { @class = "form-control", @maxlength = "100", @style = "max-width:100%" })
                            @Html.ValidationMessageFor(model => model.ID_DatoUsuario, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NO_Cliente, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.NO_Cliente, new { htmlAttributes = new { @class = "form-control", @maxlength = "100", @style = "max-width:100%" } })
                            @Html.ValidationMessageFor(model => model.NO_Cliente, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>