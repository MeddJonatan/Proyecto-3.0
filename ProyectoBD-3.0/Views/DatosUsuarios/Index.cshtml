@model IEnumerable<Proyecto.Model.Clases.DatosUsuarios>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="container-fluid mt-4" style="padding-left:5%; padding-right:5%">
        <hr />
        <h2>Listado de Usuarios</h2>
        <hr />
        <hr />
        <p>
            @Html.ActionLink("Nuevo Datos de Usuario", "Create", null, new { @class = "btn btn-primary  btn-lg ml-3" })
        </p>
        <hr />
        <hr />
        <table id="datosTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th style="width: 12%; text-align:center; align-content: center">Primer Nombre</th>
                    <th style="width: 12%; text-align:center; align-content: center">Segundo Nombre</th>
                    <th style="width: 12%; text-align:center; align-content: center">Primer Apellido</th>
                    <th style="width: 12%; text-align:center; align-content: center">Segundo Apellido</th>
                    <th style="width: 12%; text-align:center; align-content: center">Edad</th>
                    <th style="width: 10%; text-align:center; align-content: center">Género</th>
                    <th style="width: 10%; text-align:center; align-content: center">Numero Telefónico</th>
                    <th style="width: 20%; text-align:center; align-content: center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrimerNombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SegundoNombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrimerApellido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SegundoApellido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Edad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Generos.Descripcion_Genero)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumerosTelefonicos.NumeroTelefono)
                        </td>
                        <td align="center">
                            @Html.ActionLink("Editar", "Edit", new { id = item.ID_DatoUsuario }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Detalles", "Details", new { id = item.ID_DatoUsuario }, new { @class = "btn btn-success" })
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_DatoUsuario }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @section Scripts {
            <script src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js   "></script>
            <script>
                $(document).ready(function () {
                    $('#datosTable').DataTable();
                });
            </script>
        }
    </div>
</body>