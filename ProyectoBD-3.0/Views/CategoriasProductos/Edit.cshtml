@model Proyecto.Model.Clases.CategoriasProductos

@{
    ViewBag.Title = "Editar Categoría de Producto";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm bg-light">
        <div class="card-header">
            <h4>Categoría de Producto</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ID_CategoriaProducto)

                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th scope="row">@Html.LabelFor(model => model.Codigo_CategoriaProducto)</th>
                            <td>
                                @Html.EditorFor(model => model.Codigo_CategoriaProducto, new { htmlAttributes = new { @class = "form-control", placeholder = "Código de la categoría" } })
                                @Html.ValidationMessageFor(model => model.Codigo_CategoriaProducto, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">@Html.LabelFor(model => model.Nombre_CategoriaProducto)</th>
                            <td>
                                @Html.EditorFor(model => model.Nombre_CategoriaProducto, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombre de la categoría" } })
                                @Html.ValidationMessageFor(model => model.Nombre_CategoriaProducto, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="text-right mt-3">
                    <button type="submit" class="btn btn-primary">Guardar cambios</button>
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ml-2" })
                </div>
            }
        </div>
    </div>
</div>