@model Proyecto.Model.Clases.CategoriasProductos

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .form-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background: #fff;
        }

        .btn-primary-custom {
            background-color: #3b82f6;
            border-color: #3b82f6;
            color: #fff;
            padding: 10px 20px;
            border-radius: 25px;
            font-size: 16px;
        }

        .form-container h4 {
            margin-bottom: 20px;
        }

        .form-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background: #fff;
        }

        .btn-primary-custom {
            background-color: #3b82f6;
            border-color: #3b82f6;
            color: #fff;
            padding: 10px 20px;
            border-radius: 25px;
            font-size: 16px;
        }

        .form-container h4 {
            margin-bottom: 20px;
        }

        .form-control {
            align-content: center;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-container">
                <hr />
                <h4 style="text-align:center">Nueva Categoría de Productos</h4>
                <hr />
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="mb-3">
                    @Html.LabelFor(model => model.Codigo_CategoriaProducto, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Codigo_CategoriaProducto, new { htmlAttributes = new { @class = "form-control", @maxlength = "80", @style = "max-width:100%;" } })
                    @Html.ValidationMessageFor(model => model.Codigo_CategoriaProducto, "", new { @class = "text-danger" })
                </div>
                <hr />
                <div class="mb-3">
                    @Html.LabelFor(model => model.Nombre_CategoriaProducto, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Nombre_CategoriaProducto, new { htmlAttributes = new { @class = "form-control", @maxlength = "80", @style = "max-width:100%;" } })
                    @Html.ValidationMessageFor(model => model.Nombre_CategoriaProducto, "", new { @class = "text-danger" })
                </div>
                <hr />
                <hr />
                <div class="text-center">
                    <input type="submit" value="Registrar" class="btn btn-primary-custom" style="margin-right:10%" />
                    @Html.ActionLink("Volver al Listado", "Index", null, new { @class = "btn btn-danger" })
                </div>
            </div>
        }
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>